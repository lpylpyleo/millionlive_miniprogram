<view class='page'>

  <view class='page__hd'>
    <view class='page__title'>Million Live</view>
    <view class='page__desc'>选择名字稀有度进行查询</view>
  </view>


  <view class='page__bd'>

    <view class='form'>
      <form bindsubmit='handleSubmit'>

        <view class="section">
          <picker bindchange="onPickerChange" value="{{idolIndex}}" range="{{idols}}" range-key='{{"name"}}' name="idolId" id='idolIndex'>
            <view class='opts'>选择idol： {{idols[idolIndex].name}}</view>
          </picker>
        </view>

        <view class="line"></view>

        <view class="section">
          <picker bindchange="onPickerChange" value="{{rarityIndex}}" range="{{rarity}}" name="rarity" id='rarityIndex'>
            <view class='opts'>选择稀有度： {{rarity[rarityIndex]}}</view>
          </picker>
        </view>

        <view class="line"></view>

        <view class="section">
          <picker bindchange="onPickerChange" value="{{extraTypeIndex}}" range="{{extraType}}" name="extraType" id='extraTypeIndex'>
            <view class='opts'>选择类型： {{extraType[extraTypeIndex]}}</view>
          </picker>
        </view>


        <button form-type='submit' class='weui-btn mBtn' type='primary'>
          <i class="{{isLoading?'weui-loading':'hidden'}}"></i>
          提交</button>

      </form>
    </view>
  </view>

</view>