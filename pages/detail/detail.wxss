.title {
  font-size: 1.1em;
  text-align: center;
  margin-left: 20rpx;
}

.thumbnail {
  height: 80px;
  width: 80px;
  /* border: 1px rgb(161, 161, 161) solid;
  border-radius: 5px; */
  margin: 0 10px 10px 10px;
  float: left;
}

.flavor-text {
  font-size: 0.9em;
  padding: 0 10px;
  text-indent: 2em;
}

.card {
  box-shadow: 2px 2px 5px #b9b9b9;
  border: 1px solid #868686;
  border-radius: 5px;
  margin: 30px 10px 0 10px;
}

.card-head {
  padding: 10px 0;
  background-color: rgba(0, 0, 0, 0.03);
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.addOn {
  font-size: 12px;
}

.card-footer {
  text-align: right;
  background-color: rgba(0, 0, 0, 0.03);
  border-top: 1px solid rgba(0, 0, 0, 0.05);
  padding-right: 15px;
}

.modified-date {
  margin-left: 10px;
  font-size: 14px;
}

.card-body {
  padding: 20px 0;
  min-height: 80px;
}
